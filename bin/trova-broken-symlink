#!/bin/bash


	# $Id$

DOVE=${1:-.}
CANCELLA=${2:-noncancellare}

if echo $2 | egrep -q '^delete$' ; then
	blu "+ CANCELLO i symlink da '$DOVE' in giu:" >&2
	find $DOVE -type l ! -exec test -r {} \; -print0 | xargs -0 rm
else
	giallo "+ Cerco i symlink da '$DOVE' in giu:" >&2
	find $DOVE -type l ! -exec test -r {} \; -print 
fi

echo "+ Se vuoi cancellarli digita '$0 $DOVE delete'"


