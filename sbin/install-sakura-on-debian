#!/bin/bash

# nothing can fail
set -e

VER=1.3b
PKGS='vim polygen cowsay ruby rake rubygems libxml2 libxml2-dev libxslt1-dev'
GEMS='xmpp4r-simple xmpp4r ric bundler nokogiri google_drive'


# MAIN
set -x
echo Trying to install $0 v$VER...
sudo apt-get install -y $PKGS
sudo gem install --no-ri --no-rdoc $GEMS

sudo touch /root/sakura-installed-ver$VER.touch
green            sakura-installed-ver$VER.touch
